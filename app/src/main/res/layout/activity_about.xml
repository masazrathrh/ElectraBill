<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- TITLE ABOVE IMAGE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About ElectraBill"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- PROFILE IMAGE -->
        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/profile_picture"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp" />

        <!-- STUDENT INFO -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name: Mas Azra Athirah Binti Mohd Azahari\nStudent ID: 2023436008\nCourse: ICT602 – Mobile Technology and Development"
            android:textSize="16sp"
            android:lineSpacingExtra="6dp"
            android:layout_marginBottom="16dp" />

        <!-- COPYRIGHT -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="© 2025 ElectraBill. Developed by Mas Azra Athirah Binti Mohd Azahari. All rights reserved."
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <!-- GITHUB TEXT (UNCHANGED) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GitHub Repository: https://github.com/USERNAME/ElectraBill"
            android:textSize="14sp"
            android:textColor="#1A73E8" />

    </LinearLayout>
</ScrollView>
